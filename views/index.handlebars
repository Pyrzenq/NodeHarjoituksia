{{!-- There must be an event to trigger functions or scripts in the brower, run the --}}
<h2 onload=showTime() id="clock" class="digitalClock"></h2>
<script>
    function showTime(){

        // Create a date object containing current timestamp
        var date = new Date();

        // Separate hours, minutes and seconds
        var h = date.getHours();
        var m = date.getMinutes();
        var s = date.getSeconds();
        var weekdayNumber = date.getDay();
        let day = date.getDate();
        let month = date.getMonth();
        let year = date.getFullYear();

        // Add leading zeros
        h = (h < 10) ? "0" + h : h;
        m = (m < 10) ? "0" + m : m;
        s = (s < 10) ? "0" + s : s;

        // Dictionary for Finnish day names
        const dayNameLookup = {
            1: 'maanantai',
            2: 'tiistai',
            3: 'keskiviikko',
            4: 'torstai',
            5: 'perjantai',
            6: 'lauantai',
            7: 'sunnuntai'
        };

        // Lookup day name by number 1 monday, 7 sunday
        let dayName = dayNameLookup[weekdayNumber];

        // Build a string for time and put it into h2 named clock
        var time = h + ":" + m + ":" + s;
        document.getElementById("clock").innerHTML = time

        // put weekday name into element named dayName
        document.getElementById("dayName").innerHTML = dayName;

        // Put the date string into a element named dateString
        document.getElementById("dateString").innerHTML = day + "." + month + "." + year;

        // After 1000 ms (1 s) call showTime again
        setTimeout(showTime, 1000);

}
showTime();
</script>